<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3A5FCD" />
            <gradient android:angle="-90" android:startColor="#27408B" android:endColor="#436EEE"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3A5FCD" />
            <solid android:color="#4876FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#27408B" />
            <gradient android:angle="-90" android:startColor="#436EEE" android:endColor="#3A5FCD" />
        </shape>
    </item>
</selector>